@model List<StoreDiscountApp.Models.Store>
@{
    ViewBag.Title = "Store List";
}
<h2>@ViewBag.Title</h2>
<div class="row"><div class="col-md-12 text-right"> @Html.ActionLink("Add", "AddStore", null, new { @class = "btn btn-primary" })</div></div>
<table class="table table-hover table-responsive table-striped" >
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
               Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model != null)
            {
                foreach (var item in Model)
                {
            <tr>
                <td>
                    #@Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group pull-right ">
                        @Html.ActionLink("Edit", "EditStore", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                        @Html.ActionLink("Delete", "DeleteStore", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </td>
            </tr>
                    }
                }
            }
    </tbody>
</table>
