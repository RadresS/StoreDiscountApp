@model StoreDiscountApp.Models.Role
@{
    ViewBag.Title = "Add Rol";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <div class="box-body  ">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreatedDate)
                <div class="form-group">
                    @Html.LabelFor(model => model.StoreId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.StoreId, new SelectList(ViewBag.StoreList, "Value", "Text"), new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.StoreId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DiscountRate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiscountRate, new { htmlAttributes = new { @onkeypress = "return IsDigit(event);", @class = "form-control col-md-12" } })
                        @Html.ValidationMessageFor(model => model.DiscountRate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsCustomer, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsCustomer, new { htmlAttributes = new { @class = "form-control", @style = "width:25px;height:25px;margin:0px;" } })
                            @Html.ValidationMessageFor(model => model.IsCustomer, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <button type="submit" class="btn bg-olive btn-app"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
