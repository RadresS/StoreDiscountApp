@model List<StoreDiscountApp.Models.Invoice>

<table class="table table-hover table-responsive table-striped" >
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
               Rol
            </th>
            <th>
               User
            </th>
            <th>
                Price
            </th>
            <th>
                Discount
            </th>
            <th>
                Discount Rate
            </th>
            <th>
                Payable Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        #@Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RolName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                       $ @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                       $ @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscountRate)
                    </td>
                    <td>
                       $ @Html.DisplayFor(modelItem => item.Remaining)
                    </td>
                    <td>
                        <div class="btn-group pull-right ">
                            @Html.ActionLink("Delete", "DeleteInvoice", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                        </div>
                    </td>
                </tr>
                    }
                }
            }
    </tbody>
</table>
