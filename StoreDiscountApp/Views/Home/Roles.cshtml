@model List<StoreDiscountApp.Models.Role>
@{
    ViewBag.Title = "Rol List";
}
<h2>@ViewBag.Title</h2>
<div class="row"><div class="col-md-12 text-right"> @Html.ActionLink("Add", "AddRole", null, new { @class = "btn btn-primary" })</div></div>
<table class="table table-hover table-responsive table-striped" >
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Discount Rate
            </th>
            <th>
                Customer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        #@Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscountRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCustomer)
                    </td>
                    <td>
                        <div class="btn-group pull-right ">
                            @Html.ActionLink("Edit", "EditRole", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                            @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                        </div>
                    </td>
                </tr>
                    }
                }
            }
    </tbody>
</table>
